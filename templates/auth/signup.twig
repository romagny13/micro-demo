{% extends 'layout.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign up</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signup') }}" method="post">
                        {{ csrf_field | raw }}
                        <div class="form-group{% if errors.username %} has-error{% endif %}">
                            <label for="username" class="control-label">Username</label>
                            <input type="text" name="username" id="username" value="{{ model.username }}" placeholder="Username" class="form-control" autofocus>
                            {%  if errors.username %} <span class="help-block">{{ errors.username }}</span>{%  endif %}
                        </div>
                        <div class="form-group{% if errors.email %} has-error{% endif %}">
                            <label for="email" class="control-label">Email</label>
                            <input type="text" name="email" id="email" value="{{ model.email }}" placeholder="example@domain.com" class="form-control">
                            {%  if errors.email %} <span class="help-block">{{ errors.email }}</span>{%  endif %}
                        </div>
                        <div class="form-group{% if errors.password %} has-error{% endif %}">
                            <label for="password" class="control-label">Password</label>
                            <input type="password" name="password" id="password" value="{{ model.password }}" class="form-control" placeholder="Password">
                            {%  if errors.password %} <span class="help-block">{{ errors.password }}</span>{%  endif %}
                        </div>
                        <div class="form-group{% if errors.confirm_password %} has-error{% endif %}">
                            <label for="confirm_password" class="control-label">Confirm Password</label>
                            <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Confirm Password">
                            {%  if errors.confirm_password %} <span class="help-block">{{ errors.confirm_password }}</span>{%  endif %}
                        </div>
                        <input type="submit" value="Sign up" class="btn btn-default">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
