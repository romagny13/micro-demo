{% extends 'layout.twig' %}

{% block content %}

    <section>
        <h1>Add Post</h1>
        <hr>
        <form action="{{ path_for('posts.create') }}" method="post">
            {{ csrf_field | raw }}
            <div class="form-group{% if errors.title %} has-error{% endif %}">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{ model.title }}" placeholder="Enter your title here" class="form-control" autofocus>
                {%  if errors.title %} <span class="help-block">{{ errors.title }}</span>{%  endif %}
            </div>
            <div class="form-group{% if errors.content %} has-error{% endif %}">
                <textarea rows="10" id="content" name="content" value="{{ model.content }}" class="form-control"></textarea>
                {%  if errors.content %} <span class="help-block">{{ errors.content }}</span>{%  endif %}
            </div>
            <input type="submit" value="Publish" class="btn btn-default">
        </form>
    </section>

{% endblock %}
